<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pmggroup.ultimatewallpapers">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />

    <application
        android:name="com.pmggroup.ultimatewallpapers.application.UltimateWallpapersApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UltimateWallpapers"
        android:usesCleartextTraffic="true">
        <activity android:name="com.pmggroup.ultimatewallpapers.view.fullscreen.view.FullScreenActivity"></activity>
        <activity
            android:name="com.pmggroup.ultimatewallpapers.view.home.view.HomeScreenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.pmggroup.ultimatewallpapers.view.splash.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pmggroup.ultimatewallpapers.view.main.MainActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-6491242549381158~6741512172" />
    </application>

</manifest>