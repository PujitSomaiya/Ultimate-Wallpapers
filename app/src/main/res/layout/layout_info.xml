<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_dialog_bg_50565B"
    android:paddingStart="@dimen/_20sdp"
    android:paddingEnd="@dimen/_20sdp"
    android:paddingTop="@dimen/_20sdp"
    android:paddingBottom="@dimen/_20sdp"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgCancel"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_cancel"
        app:tint="@color/color_theme_00FFFF" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/color_theme_00FFFF"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="@dimen/_20ssp"
                android:textAlignment="viewEnd"
                android:text="Made In INDIA "
                app:layout_constraintBottom_toBottomOf="@id/imgCancel"
                app:layout_constraintTop_toTopOf="@id/imgCancel"
                app:layout_constraintStart_toEndOf="@id/imgCancel"
                app:layout_constraintEnd_toEndOf="parent"
                />

    <TextView
        android:id="@+id/tvAboutUs"
        app:layout_constraintTop_toBottomOf="@id/imgCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/color_theme_00FFFF"
        android:textSize="@dimen/_15ssp"
        android:fontFamily="@font/montserrat_medium"
        android:text="About Us"
        />

    <TextView
        android:id="@+id/tvAboutUsIntro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/color_theme_00FFFF"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/about_us"
        app:layout_constraintTop_toBottomOf="@id/tvAboutUs"
        />

    <TextView
        android:id="@+id/tvPrivacyPolicyIntro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/color_theme_00FFFF"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/privacytext"
        app:layout_constraintTop_toBottomOf="@id/tvAboutUsIntro"
        />

         <ImageView
             app:layout_constraintTop_toBottomOf="@id/tvPrivacyPolicyIntro"
             app:layout_constraintBottom_toBottomOf="parent"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:src="@drawable/img_pixy"
             />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>